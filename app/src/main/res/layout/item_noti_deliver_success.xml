<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLogoFinishedDeliver"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="8dp"
        android:src="@drawable/logo_thumb"
        app:civ_border_color="@color/blue_main"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tvTitleFinishedDeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/imgLogoFinishedDeliver"
        android:fontFamily="@font/outfit_medium"
        android:lines="2"
        android:text="Đơn hàng abcxyz đã được giao thành công"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDateTimeFinishedDeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/outfit_regular"
        android:text="18h21 20/9/2021"
        android:textColor="@color/hint_text" />
    <View
        android:id="@+id/viewDividerFinishedDeliver"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue_main"/>

    <TextView
        android:id="@+id/btnDetailNotiFinishedDeliver"
        android:layout_width="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/bg_btn_history_buying"
        android:fontFamily="@font/outfit_regular"
        android:textColor="@color/white"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleFinishedDeliver"
        android:layout_alignStart="@+id/tvTitleFinishedDeliver"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:text="Chi tiết" />
</RelativeLayout>