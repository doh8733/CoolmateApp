<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_user_scene"
    tools:context=".view.activity.UserActivity">

    <ImageView
        android:id="@+id/btnBackUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/ripple_circle"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button" />

    <ImageView
        android:id="@+id/btnRefreshUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ripple_circle"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_refresh_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="247dp"
        android:layout_height="247dp"
        android:layout_marginTop="68dp"
        android:src="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackUser" />

    <ImageView
        android:id="@+id/imgTickUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
        app:srcCompat="@drawable/ic_tick_blue_user" />

    <TextView
        android:id="@+id/tvVerifyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/outfit_regular"
        android:text="Đã xác minh"
        android:textColor="@color/blue_main"
        app:layout_constraintBottom_toBottomOf="@+id/imgTickUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTickUser"
        app:layout_constraintTop_toTopOf="@+id/imgTickUser" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit_medium"
        android:text="User"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBackUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBackUser" />

    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Ngô Minh Quân"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/outfit_regular"
        android:maxLines="2"
        android:text="ngominhquan20021809@gmail.com"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser" />

    <TextView
        android:id="@+id/tvPhoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/outfit_regular"
        android:text="0999999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailUser" />

    <TextView
        android:id="@+id/btnEditUser"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_bg_btn_solid_black"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="Chỉnh sửa thông tin"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneUser"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btnTheoDoiDonUser"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_history_buying"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Theo dõi đơn hàng"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/ic_car"
        app:layout_constraintEnd_toEndOf="@+id/btnEditUser"
        app:layout_constraintStart_toStartOf="@+id/btnEditUser"
        app:layout_constraintTop_toBottomOf="@+id/btnEditUser" />

    <TextView
        android:id="@+id/btnHistoryUser"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_history_buying"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Lịch sử đặt hàng"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/ic_car"
        app:layout_constraintEnd_toEndOf="@+id/btnTheoDoiDonUser"
        app:layout_constraintStart_toStartOf="@+id/btnTheoDoiDonUser"
        app:layout_constraintTop_toBottomOf="@+id/btnTheoDoiDonUser" />

    <TextView
        android:id="@+id/btnChangePassUser"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_bg_btn_blue"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="@string/i_m_t_kh_u"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnLogOut"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnHistoryUser"
        app:layout_constraintTop_toBottomOf="@+id/btnHistoryUser" />

    <TextView
        android:id="@+id/btnLogOut"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_red"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="@string/log_out"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnHistoryUser"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnChangePassUser"
        app:layout_constraintTop_toBottomOf="@+id/btnHistoryUser" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_safe"
        android:drawablePadding="24dp"
        android:fontFamily="@font/outfit_medium"
        android:text="@string/d_li_u_c_a_b_n_lu_n_c_b_o_m_t"
        android:textColor="@color/blue_main"
        app:layout_constraintEnd_toEndOf="@+id/btnHistoryUser"
        app:layout_constraintStart_toStartOf="@+id/btnHistoryUser"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePassUser" />

    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>