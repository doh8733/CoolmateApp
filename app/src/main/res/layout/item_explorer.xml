<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgExplorer"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:maxHeight="222dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/bg_item_webview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/imgExplorer"
        android:layout_alignBottom="@id/imgExplorer"
        android:fontFamily="@font/outfit_medium"
        android:text="Xem thÃªm"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvBrands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgExplorer"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="PROULY"
        android:textColor="#5532E0"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBrands"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:text="MADE IN VIETNAM"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMade"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/outfit_light"
        android:gravity="center"
        android:text="@string/text_des"
        android:textColor="@color/black"
        android:textSize="15sp" />
</RelativeLayout>