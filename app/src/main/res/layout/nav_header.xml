<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btnCloseHeader"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ripple_circle"
        android:padding="8dp"
        android:src="@drawable/ic_close_gray"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLogoHeader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloseHeader" />

    <TextView
        android:fontFamily="@font/outfit_regular"
        android:id="@+id/tvNameHeader"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:text="Nguyễn Hoàng Nguyễn Xuân Nguyễn Xuân"
        app:layout_constraintBottom_toTopOf="@+id/tvEmailHeader"
        app:layout_constraintEnd_toStartOf="@+id/btnCloseHeader"
        app:layout_constraintStart_toEndOf="@+id/imgLogoHeader"
        app:layout_constraintTop_toTopOf="@+id/imgLogoHeader" />

    <TextView
        android:fontFamily="@font/outfit_regular"
        android:textColor="@color/white"
        android:id="@+id/tvEmailHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ngominhquan20021809@gmail.com.com.com.com.com"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogoHeader"
        app:layout_constraintEnd_toEndOf="@+id/tvNameHeader"
        app:layout_constraintStart_toStartOf="@+id/tvNameHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvNameHeader" />

    <ImageView
        android:background="@drawable/ripple_circle"
        android:id="@+id/btnChangeInfoHeader"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogoHeader"
        app:layout_constraintEnd_toEndOf="@+id/imgLogoHeader"
        app:srcCompat="@drawable/ic_edit_nav_header" />

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:translationZ="0dp"
        android:alpha="0.3"
        app:cardCornerRadius="16dp"
        android:id="@+id/bgBtnEditInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnChangeInfoHeader"
        app:layout_constraintEnd_toEndOf="@+id/btnChangeInfoHeader"
        app:layout_constraintStart_toStartOf="@+id/btnChangeInfoHeader"
        app:layout_constraintTop_toTopOf="@+id/btnChangeInfoHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>