<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/custom_bg_item_cart"
    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:id="@+id/imgItemFavorite"
        android:layout_width="77dp"
        android:layout_height="110dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@color/hint"/>

    <TextView
        android:id="@+id/tvNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgItemFavorite"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/tvPrice"
        android:layout_toEndOf="@+id/imgItemFavorite"
        android:fontFamily="@font/outfit_light"
        android:text="Ao thun polo nam Pique Coton"
        android:textColor="#2F5ACF"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvLocalBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameProduct"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/tvPrice"
        android:layout_toEndOf="@id/imgItemFavorite"
        android:fontFamily="@font/outfit_light"
        android:text="Geeta Collection"
        android:textColor="#A1A1A1"
        android:textSize="14sp"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/outfit_medium"
        android:text="329.000VND"
        android:textSize="16sp"
        android:textColor="#FF0000"/>

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@id/imgItemFavorite"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:rotationY="-180"
        app:srcCompat="@drawable/ic_back_button" />


</RelativeLayout>