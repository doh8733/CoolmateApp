                android:lines="1"
                android:singleLine="true"
                android:text="10-12-2022 10:21"
                app:layout_constraintBottom_toBottomOf="@+id/textView53"
                app:layout_constraintEnd_toEndOf="@+id/textView55"
                app:layout_constraintTop_toTopOf="@+id/textView53" />

            <TextView
                android:id="@+id/textView111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_regular"
                android:gravity="end"
                android:lines="1"
                android:singleLine="true"
                android:text="15-12-2022 09:21"
                app:layout_constraintBottom_toBottomOf="@+id/textView54"
                app:layout_constraintEnd_toEndOf="@+id/textView55"
                app:layout_constraintTop_toTopOf="@+id/textView54" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/custom_btn_text_border"
                android:fontFamily="@font/outfit_regular"
                android:gravity="center"
                android:text="Mua lại"
                android:textColor="@color/green_main"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView59"
                app:layout_constraintEnd_toEndOf="@+id/textView111"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView59"
                app:layout_constraintTop_toTopOf="@+id/textView59"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_btn_text_border"
                android:fontFamily="@font/outfit_regular"
                android:gravity="center"
                android:text="Nhắn tin"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/textView58"
                app:layout_constraintStart_toStartOf="@+id/textView54"
                app:layout_constraintTop_toBottomOf="@+id/textView54" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvDetailBill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvYouMaybeLike"
                app:spanCount="2"
                tools:itemCount="5"
                tools:listitem="@layout/item_home" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@color/hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewInfoDetail" />

            <TextView
                android:id="@+id/tvYouMaybeLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/outfit_regular"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Có thể bạn cũng thích"
                app:layout_constraintBottom_toBottomOf="@+id/viewDivider"
                app:layout_constraintEnd_toEndOf="@+id/viewDivider"
                app:layout_constraintStart_toStartOf="@+id/viewDivider"
                app:layout_constraintTop_toBottomOf="@+id/viewDivider" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView48"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_bg_btn_black"
        android:gravity="center"
        android:text="Đánh giá"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
