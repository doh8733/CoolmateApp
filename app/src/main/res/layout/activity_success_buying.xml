<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SuccessBuyingActivity">


    <TextView
        android:id="@+id/btnBackHome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_bg_btn_border_black"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="Xin vui lòng thử lại"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvSuccessText"
        app:layout_constraintStart_toStartOf="@+id/tvSuccessText"
        app:layout_constraintTop_toBottomOf="@+id/btnContinuesBuy"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBackHome"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/ivCar2"
        app:layout_constraintTop_toTopOf="@+id/btnBackHome"
        app:srcCompat="@drawable/ic_back_button" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/outfit_regular"
        android:text="Trở vể trang chủ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnBackHome"
        app:layout_constraintEnd_toEndOf="@+id/btnBackHome"
        app:layout_constraintStart_toStartOf="@+id/btnBackHome"
        app:layout_constraintTop_toTopOf="@+id/btnBackHome" />




    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivSuccess"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/success" />

    <TextView
        android:id="@+id/btnFollowBill"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_btn_history_buying"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="Theo dõi đơn hàng"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSuccessText"
        app:layout_constraintStart_toStartOf="@+id/tvSuccessText"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessSubText" />

    <TextView
        android:id="@+id/btnContinuesBuy"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_bg_btn_solid_black"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:text="Tiếp tục mua sắm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSuccessText"
        app:layout_constraintStart_toStartOf="@+id/tvSuccessText"
        app:layout_constraintTop_toBottomOf="@+id/btnFollowBill" />

    <TextView
        android:id="@+id/tvSuccessText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/outfit_regular"
        android:text="Chúc mừng!\n Đơn hàng của bạn đã được đặt"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSuccess" />

    <TextView
        android:id="@+id/tvSuccessSubText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/outfit_regular"
        android:text="Đơn hàng của bạn đang được đặt và đang chờ để xử lý"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSuccessText"
        app:layout_constraintStart_toStartOf="@+id/tvSuccessText"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessText" />

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnFollowBill"
        app:layout_constraintStart_toStartOf="@+id/btnFollowBill"
        app:layout_constraintTop_toTopOf="@+id/btnFollowBill"
        app:srcCompat="@drawable/ic_car" />

    <ImageView
        android:id="@+id/ivCar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnContinuesBuy"
        app:layout_constraintStart_toStartOf="@+id/btnContinuesBuy"
        app:layout_constraintTop_toTopOf="@+id/btnContinuesBuy"
        app:srcCompat="@drawable/ic_shopping_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>