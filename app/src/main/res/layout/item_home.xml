<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_normal">

    <View
        android:id="@+id/viewBGItemHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgItemHome"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-16dp"
        android:background="@drawable/bg_img_item"
        android:padding="100dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgItemHome"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="32dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@color/white" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/btnHeartItemHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgItemHome"
        android:layout_alignEnd="@+id/imgItemHome"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/ripple_circle"
        android:padding="8dp"
        android:src="@drawable/ripple_heart_border" />

    <TextView
        android:id="@+id/tvNameItemHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewBGItemHome"
        android:layout_alignStart="@+id/viewBGItemHome"
        android:layout_alignEnd="@+id/viewBGItemHome"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/o_polo_nam_anti_smell"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPriceItemHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameItemHome"
        android:layout_alignStart="@+id/tvNameItemHome"
        android:layout_alignEnd="@+id/tvNameItemHome"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/outfit_bold"
        android:text="@string/_329_000_vnd"
        android:textAllCaps="true"
        android:textColor="@color/blue_main"
        android:textSize="18sp" />
</RelativeLayout>