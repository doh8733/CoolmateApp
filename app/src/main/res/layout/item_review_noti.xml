<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLogoFirstOrder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="8dp"
        android:src="@drawable/logo_thumb"
        app:civ_border_color="@color/blue_main"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tvTitleFirstOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/imgLogoFirstOrder"
        android:fontFamily="@font/outfit_medium"
        android:lines="2"
        android:text="Bạn cảm thấy sản phẩm chúng tôi thế nào?\n Hãy để lại đánh giá nhé!"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDateTimeFirstOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/outfit_regular"
        android:text="18h21 20/9/2021"
        android:textColor="@color/hint_text" />

    <View
        android:id="@+id/viewDividerReview"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_main" />

    <TextView
        android:id="@+id/btnReviewNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitleFirstOrder"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_bg_btn_blue"
        android:elevation="8dp"
        android:fontFamily="@font/outfit_regular"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Đánh giá ngay"
        android:textColor="@color/white" />
</RelativeLayout>